<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dim_all"
    tools:context=".RecetteFragment">

    <TextView
        android:textSize="@dimen/dim_title"
        android:gravity="center"
        android:text="Ajouter des plats"
        android:inputType="textAutoComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="spUsage"
        />


    <EditText
        android:id="@+id/txtPlat"
        android:layout_marginTop="@dimen/dim_top"
        android:hint="Nom du plat"
        android:inputType="textAutoComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/txtPrix"
        android:layout_marginTop="@dimen/dim_top"
        android:hint="Le prix du plat"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnAjouter"
        android:layout_marginTop="@dimen/dim_top"
        android:layout_marginStart="@dimen/dim_left"
        android:layout_marginEnd="@dimen/dim_right"
        android:text="Ajouter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/logo_color"/>


</LinearLayout>